<UserControl x:Class="Whip.PlaylistsStandardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Whip"
             xmlns:controls="clr-namespace:Whip.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <CollectionViewSource Source="{Binding States}" x:Key="statesView">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Country" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <CollectionViewSource Source="{Binding Cities}" x:Key="citiesView">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Country" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <Style TargetType="{x:Type controls:PlayerControlButton}"
               BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Padding" Value="5 2" />
            <Setter Property="MinWidth" Value="20" />
            <Setter Property="MinHeight" Value="20" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" 
               Style="{StaticResource TitleLabel}"
               Content="Quick Playlists" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <controls:PlayerControlButton Grid.Row="0" Grid.Column="0"
                                          Type="Play"
                                          Command="{Binding PlayGroupingCommand}"/>
            
            <Label Grid.Row="0" Grid.Column="1"
                   Content="Grouping" />

            <ComboBox Grid.Row="0" Grid.Column="2"
                      ItemsSource="{Binding Groupings}"
                      SelectedItem="{Binding SelectedGrouping}" />

            <controls:PlayerControlButton Grid.Row="1" Grid.Column="0"
                                          Type="Play"
                                          Command="{Binding PlayGenreCommand}"/>

            <Label Grid.Row="1" Grid.Column="1"
                   Content="Genre" />
            
            <ComboBox Grid.Row="1" Grid.Column="2"
                      ItemsSource="{Binding Genres}"
                      SelectedItem="{Binding SelectedGenre}" />

            <controls:PlayerControlButton Grid.Row="2" Grid.Column="0"
                                          Type="Play"
                                          Command="{Binding PlayCountryCommand}"
                                          Margin="5"/>

            <Label Grid.Row="2" Grid.Column="1"
                   Content="Country" />

            <ComboBox Grid.Row="2" Grid.Column="2"
                      ItemsSource="{Binding Countries}"
                      SelectedItem="{Binding SelectedCountry}" />

            <controls:PlayerControlButton Grid.Row="3" Grid.Column="0"
                                          Type="Play"
                                          Command="{Binding PlayStateCommand}"/>
            
            <Label Grid.Row="3" Grid.Column="1"
                   Content="State" />

            <ComboBox Grid.Row="3" Grid.Column="2"
                      ItemsSource="{Binding Source={StaticResource statesView}}"
                      SelectedItem="{Binding SelectedState}">
                <ComboBox.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Name}"
                                       FontWeight="Bold"
                                       Padding="5, 2"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ComboBox.GroupStyle>
            </ComboBox>

            <controls:PlayerControlButton Grid.Row="4" Grid.Column="0"
                                          Type="Play"
                                          Command="{Binding PlayCityCommand}"/>
            
            <Label Grid.Row="4" Grid.Column="1"
                   Content="City" />

            <ComboBox Grid.Row="4" Grid.Column="2"
                      ItemsSource="{Binding Source={StaticResource citiesView}}"
                      SelectedItem="{Binding SelectedCity}"
                      DisplayMemberPath="CityStateDescription">
                <ComboBox.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Name}"
                                           FontWeight="Bold"
                                           Padding="5, 2"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ComboBox.GroupStyle>
            </ComboBox>

            <controls:PlayerControlButton Grid.Row="5" Grid.Column="0"
                                          Type="Play"
                                          Command="{Binding PlayCityCommand}"/>
            
            <Label Grid.Row="5" Grid.Column="1"
                   Content="Tag" />

            <ComboBox Grid.Row="5" Grid.Column="2"
                      ItemsSource="{Binding Tags}"
                      SelectedItem="{Binding SelectedTag}" />

            <controls:PlayerControlButton Grid.Row="6" Grid.Column="0"
                                          Type="Play"
                                          Command="{Binding PlayRecentlyAddedCommand}"/>
            
            <Label Grid.Row="6" Grid.Column="1"
                   Content="Added" />

            <ComboBox Grid.Row="6" Grid.Column="2"
                      ItemsSource="{Binding AddedDateOptions}"
                      SelectedItem="{Binding SelectedAddedDateOption}" />

        </Grid>

    </Grid>
</UserControl>
