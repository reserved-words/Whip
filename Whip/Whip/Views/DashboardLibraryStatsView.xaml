<UserControl x:Class="Whip.Views.DashboardLibraryStatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Whip.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <GroupBox Header="Library Statistics"
                  Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0"
                       Content="Track Artists" />

                <Label Grid.Row="0" Grid.Column="1"
                       Content="{Binding NumberOfTrackArtists}"
                       HorizontalAlignment="Right"
                       HorizontalContentAlignment="Right"/>

                <Label Grid.Row="1" Grid.Column="0"
                       Content="Album Artists" />

                <Label Grid.Row="1" Grid.Column="1"
                       Content="{Binding NumberOfAlbumArtists}"
                       HorizontalAlignment="Right"
                       HorizontalContentAlignment="Right" />

                <Label Grid.Row="2" Grid.Column="0"
                       Content="Albums" />

                <Label Grid.Row="2" Grid.Column="1"
                       Content="{Binding NumberOfAlbums}"
                       HorizontalAlignment="Right"
                       HorizontalContentAlignment="Right" />

                <Label Grid.Row="3" Grid.Column="0"
                       Content="Tracks" />

                <Label Grid.Row="3" Grid.Column="1"
                       Content="{Binding NumberOfTracks}"
                       HorizontalAlignment="Right"
                       HorizontalContentAlignment="Right" />

                <Label Grid.Row="4" Grid.Column="0"
                       Content="Total Time" />

                <Label Grid.Row="4" Grid.Column="1"
                       Content="{Binding TotalTime}"
                       HorizontalAlignment="Right"
                       HorizontalContentAlignment="Right" />

            </Grid>
        </GroupBox>
        <GroupBox Header="Artists By Grouping"
                  Padding="10">
            <DataGrid ItemsSource="{Binding ArtistsByGrouping}"
                      HeadersVisibility="None"
                      Margin="0"
                      Padding="0"
                      BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Caption}"
                                        Width="*"/>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Count}"
                                       HorizontalAlignment="Right"
                                       HorizontalContentAlignment="Right"
                                       Margin="0"
                                       Padding="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Albums By Release Type"
                  Padding="10">
            <DataGrid ItemsSource="{Binding AlbumsByReleaseType}"
                      HeadersVisibility="None"
                      Margin="0"
                      Padding="0"
                      BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Caption}"
                                        Width="*"/>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Count}"
                                       HorizontalAlignment="Right"
                                       HorizontalContentAlignment="Right"
                                       Margin="0"
                                       Padding="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </StackPanel>
</UserControl>
