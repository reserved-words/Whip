<UserControl x:Class="Whip.Windows.ConfirmationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Whip.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Margin="10">
       
        <Label Content="{Binding Text}" />

        <WrapPanel Grid.Row="2"
                   Grid.Column="0" Grid.ColumnSpan="3"
                   HorizontalAlignment="Center">
            <Button Content="{Binding TrueCaption}"
                    Command="{Binding SelectResultCommand}"
                    CommandParameter="{Binding True}"
                    Margin="5"
                    Padding="5,2"/>
            <Button Content="{Binding FalseCaption}"
                    Command="{Binding SelectResultCommand}"
                    CommandParameter="{Binding False}"
                    Margin="0,5,5,5"
                    Padding="5,2"/>
        </WrapPanel>

    </StackPanel>
</UserControl>
