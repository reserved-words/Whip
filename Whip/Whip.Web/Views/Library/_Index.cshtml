@model Whip.Web.Models.LibraryViewModel

<div id="tab-library">
    <h1>Library</h1>

    <div class="row">

        <div class="col-xs-3">

            <ul class="list-unstyled">
                @foreach (var artist in Model.Artists)
                {
                    <li>
                        <button type="button" data-whip-play-url="@artist.PlayUrl" class="btn btn-default">
                            <span class="glyphicon glyphicon-play"></span>
                        </button>
                        <a data-whip-artist-url="@Url.Action("Artist", "Library", new { name = artist.Name })">@Html.DisplayFor(m => artist.Name)</a>
                    </li>
                }
            </ul>

        </div>

        <div class="col-xs-9">

            <div id="library-artist">



            </div>

        </div>
        
    </div>
</div>