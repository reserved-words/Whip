@using Whip.Web.Models
@model List<PlaylistViewModel>

<div class="section">
    <button type="button" data-whip-play-url="@Url.Action("ShuffleAll", "Library")" class="btn btn-default btn-block">Shuffle Library</button>
</div>

<div class="section">
    <div class="btn-group-vertical block">
        @foreach (var playlist in Model)
        {
            <button type="button" data-whip-play-url="@Html.DisplayFor(m => playlist.PlayUrl)" class="btn btn-default block">@Html.DisplayFor(m => playlist.Title)</button>
        }
    </div>
</div>
