@model Whip.Web.Models.PlaylistsViewModel

<h1>Playlists</h1>

<h2>Standard Playlists</h2>

<ul>
    @foreach (var playlist in Model.StandardPlaylists)
    {
        <li>
            <a data-whip-url="@Url.Action("StandardPlaylist", "Playlists", new {id = playlist.Id})">@Html.DisplayFor(m => playlist.Title)</a>
        </li>
    }
</ul>

