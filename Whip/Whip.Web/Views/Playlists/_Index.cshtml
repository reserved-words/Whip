@model Whip.Web.Models.PlaylistsViewModel

<div id="tab-playlists">
    <div class="screen-panel panel panel-default">
        <div class="panel-heading">
            <div class="panel-title">Playlists</div>
        </div>
        <div class="panel-body panel-body-no-footer">
            <div class="row">

                <div class="col-md-4">
                    <h2>Standard Playlists</h2>

                    <div class="btn-group-vertical btn-group-square btn-group-playlists">
                        @Html.Partial("_PlayItemList", Model.StandardPlaylists)
                    </div>

                </div>

                <div class="col-md-4">
                    <h2>Criteria Playlists</h2>

                    <div class="btn-group-vertical btn-group-square btn-group-playlists">
                        @Html.Partial("_PlayItemList", Model.CriteriaPlaylists)
                    </div>
                </div>

                <div class="col-md-4">
                    <h2>Ordered Playlists</h2>

                    <div class="btn-group-vertical btn-group-square btn-group-playlists">
                        @Html.Partial("_PlayItemList", Model.OrderedPlaylists)
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>