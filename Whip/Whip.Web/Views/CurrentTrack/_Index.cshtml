@using Whip.Web.ExtensionMethods

@model Whip.Web.Models.TrackViewModel

<div id="tab-current-track">
    <div class="screen-panel panel panel-default">
        <div class="panel-heading">
            <div class="panel-title">Current Track</div>
        </div>
        <div class="panel-body-no-footer">
            @if (Model == null)
            {
                <p>No track playing</p>
            }
            else
            {
                <ul class="nav nav-tabs">
                    <li role="presentation" data-toggle="tab" data-target="#track" class="active"><a href="#track">Track</a></li>
                    <li role="presentation" data-toggle="tab" data-target="#artist"><a href="#artist">Artist</a></li>
                    <li role="presentation" data-toggle="tab" data-target="#album"><a href="#album">Album</a></li>
                    <li role="presentation" data-toggle="tab" data-target="#lyrics"><a href="#lyrics">Lyrics</a></li>
                </ul>

                <div class="tab-content">
                    <div id="track" class="tab-pane fade in active">
                        <div class="panel">
                            <div class="panel-body">
                                <img src="@Model.ArtworkUrl" class="img-responsive" />
                            </div>
                        </div>
                        <div class="panel">
                            <table class="table table-striped table-condensed">
                                <tbody>
                                <tr>
                                    <td>@Html.Label("Title", new {@class = "control-label"})</td>
                                    <td>@Html.DisplayFor(m => Model.Track.Title)</td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Year", new {@class = "control-label"})</td>
                                    <td>@Html.DisplayFor(m => Model.Track.Year)</td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Duration", new {@class = "control-label"})</td>
                                    <td>@Html.DisplayFor(m => Model.Track.Duration)</td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Tags", new {@class = "control-label"})</td>
                                    <td>@Html.DisplayFor(m => Model.Track.TagsDescription)</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div id="artist" class="tab-pane fade">
                        <div class="panel">
                            <table class="table table-striped table-condensed">
                                <tbody>
                                <tr>
                                    <td>@Html.Label("Name", new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(m => Model.Track.Artist.Name)</td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Grouping", new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(m => Model.Track.Artist.Grouping)</td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Genre", new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(m => Model.Track.Artist.Genre)</td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Origin", new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(m => Model.Track.Artist.City.Description)</td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Web", new { @class = "control-label" })</td>
                                    <td>@Html.Partial("_ArtistLinks", Model.Track.Artist)</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div id="album" class="tab-pane fade">
                        <div class="panel">
                            <table class="table table-striped table-condensed">
                                <tbody>
                                <tr>
                                    <td>@Html.Label("Title", new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(m => Model.Track.Disc.Album.Title)</td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Artist", new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(m => Model.Track.Disc.Album.Artist.Name)</td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Type", new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(m => Model.Track.Disc.Album.ReleaseType)</td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Year", new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(m => Model.Track.Disc.Album.Year)</td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Track No", new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(m => Model.Track.TrackNoDescription)</td>
                                </tr>
                                <tr>
                                    <td>@Html.Label("Disc No", new { @class = "control-label" })</td>
                                    <td>@Html.DisplayFor(m => Model.Track.DiscNoDescription)</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div id="lyrics" class="tab-pane fade">
                        <div class="panel">
                            <div class="panel-body">
                                @Html.DisplayWithBreaksFor(m => m.Track.Lyrics)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>