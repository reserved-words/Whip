<UserControl x:Class="Whip.TabSystemInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">

            <Label Style="{StaticResource TitleLabel}"
                   Content="Application Details" />
            
            <Label Content="{Binding ApplicationVersion}"></Label>
            <Label Content="{Binding ApplicationPublishDate}"></Label>
            
            <Label Style="{StaticResource TitleLabel}"
                   Content="Web Interaction" />

            <Grid Margin="10" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="1"
                           Text="Status"
                           Padding="0,10"/>
                <TextBlock Grid.Row="0" Grid.Column="2"
                           Text="Details"
                           Padding="0,10"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Internet"
                           VerticalAlignment="Top"
                           Padding="0,10"/>
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="{Binding InternetStatus}"
                           VerticalAlignment="Top"
                           Padding="0,10"/>
                <TextBlock Grid.Row="1" Grid.Column="2"
                           Text="{Binding InternetStatusDetails}"
                           Padding="0,10"/>

                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Last.FM"
                           VerticalAlignment="Top"
                           Padding="0,10"/>
                <TextBlock Grid.Row="2" Grid.Column="1"
                           Text="{Binding LastFmStatus}"
                           VerticalAlignment="Top"
                           Padding="0,10"/>

                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Twitter"
                           VerticalAlignment="Top"
                           Padding="0,10"/>

                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="YouTube"
                           VerticalAlignment="Top"
                           Padding="0,10"/>

                <TextBlock Grid.Row="5" Grid.Column="0"
                           Text="BandsInTown"
                           VerticalAlignment="Top"
                           Padding="0,10"/>

                <StackPanel Grid.Row="2" Grid.Column="2">
                    <TextBlock Text="{Binding LastFmStatusDetails}"
                               Padding="0,5"/>
                    <WrapPanel Visibility="{Binding LastFmOn, Converter={StaticResource NegBoolVisibilityConverter}}">
                        <TextBlock FontWeight="Bold"
                                   Text="Error Message: " 
                                   Padding="0,5,2,10"/>
                        <TextBlock Text="{Binding LastFmErrorMessage}"
                                   Padding="0,5,0,10"/>
                    </WrapPanel>
                </StackPanel>
            </Grid>

        </StackPanel>

        <Border Grid.Column="1"
                Style="{StaticResource VerticalLine}" />
        
        <StackPanel Grid.Column="2"
                    HorizontalAlignment="Stretch">
            
            <Label Style="{StaticResource TitleLabel}"
                   Content="Logs" />
            
            <WrapPanel>
                <Label Content="Date:"></Label>
                <DatePicker SelectedDate="{Binding LogsDate}"/>
            </WrapPanel>

            <DataGrid ItemsSource="{Binding Logs}"
                      Margin="10"
                      HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Logged At" 
                                        Width="Auto"
                                        Binding="{Binding LoggedAt, StringFormat='dd/MM/yyyy HH:mm:ss'}" />
                    <DataGridTextColumn Header="Type" 
                                        Width="Auto"
                                        Binding="{Binding Type}" />
                    <DataGridTextColumn Header="Message" 
                                        Width="*"
                                        Binding="{Binding Message}" />
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</UserControl>
