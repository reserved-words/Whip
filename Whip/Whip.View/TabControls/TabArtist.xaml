<UserControl x:Class="Whip.TabArtist"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Whip"
             xmlns:controls="clr-namespace:Whip.Controls"
             xmlns:res="clr-namespace:Whip.Resources;assembly=Whip.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"
                              MaxWidth="600"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <WrapPanel DockPanel.Dock="Left"
                           VerticalAlignment="Center">
                    <Label Style="{StaticResource TitleLabel}"
                           Content="Show:"/>
                    <ComboBox Width="180"
                              IsEditable="False"
                              VerticalAlignment="Center"
                              ItemsSource="{Binding Artists}"
                              DisplayMemberPath="Name"
                              IsEnabled="{Binding NotShowingCurrentArtist}"
                              SelectedItem="{Binding Artist}" />
                </WrapPanel>
                <WrapPanel DockPanel.Dock="Right"
                           HorizontalAlignment="Right"
                           Margin="5"
                           VerticalAlignment="Center">
                    <CheckBox DockPanel.Dock="Right"
                              IsChecked="{Binding ShowingCurrentArtist}"
                              VerticalAlignment="Center"
                              Content="Current"/>
                </WrapPanel>
            </DockPanel>

            <local:LibraryArtistView Grid.Row="1"
                                     DataContext="{Binding}" />

        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Style="{StaticResource TitleLabel}"
                   Content="Twitter Feed" />

            <Label Grid.Row="1"/>

            <Label Grid.Row="2"
                   Style="{StaticResource TitleLabel}"
                   Content="Latest YouTube Video" />

            <Label Grid.Row="3"
                   Height="300" />

        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <WrapPanel Grid.Row="0">
                    <controls:HyperlinkLabel Username="{Binding Artist.BandsInTown}" 
                                             UrlFormat="{x:Static res:Resources.BandsInTownUrl}">
                        <Image Source="/Images/bandsintown.ico"
                               Style="{StaticResource Icon32}"
                               Width="16"
                               Height="16"/>
                    </controls:HyperlinkLabel>
                    <Label Style="{StaticResource TitleLabel}"
                           VerticalAlignment="Top"
                           Content="Upcoming Events" />
                </WrapPanel>
                <WrapPanel DockPanel.Dock="Right"
                           HorizontalAlignment="Right"
                           Margin="5"
                           VerticalAlignment="Center">
                    <CheckBox DockPanel.Dock="Right"
                              IsChecked="{Binding UKEventsOnly}"
                              VerticalAlignment="Center"
                              Content="UK Only"/>
                </WrapPanel>
            </DockPanel>

            <DataGrid Grid.Row="1"
                      Margin="0,5,0,0"
                      ItemsSource="{Binding UpcomingEvents}"
                      HeadersVisibility="None"
                      GridLinesVisibility="Horizontal"
                      BorderThickness="0">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="ToolTip" Value="{Binding ArtistList}" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                    </Style>
                    <Style TargetType="{x:Type TextBlock}" x:Key="EventElementStyle">
                        <Setter Property="Margin" Value="10, 0"/>
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="Height" Value="28" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Width="Auto"
                                        Binding="{Binding Date, StringFormat=dd/MM/yyyy}"
                                        ElementStyle="{StaticResource EventElementStyle}"/>
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding Venue}"
                                        ElementStyle="{StaticResource EventElementStyle}"/>
                    <DataGridTextColumn Width="Auto"
                                        Binding="{Binding City}"
                                        ElementStyle="{StaticResource EventElementStyle}"/>
                    <DataGridTextColumn Width="Auto"
                                        Binding="{Binding Country}"
                                        ElementStyle="{StaticResource EventElementStyle}"/>
                </DataGrid.Columns>
            </DataGrid>

            <WrapPanel Grid.Row="2">
                <controls:HyperlinkLabel Username="{Binding Artist.LastFm}" 
                                         UrlFormat="{x:Static res:Resources.LastFmUrl}">
                    <Image Source="/Images/lastfm.ico"
                           Style="{StaticResource Icon32}"
                           Width="16"
                           Height="16"/>
                </controls:HyperlinkLabel>
                <Label Style="{StaticResource TitleLabel}"
                       Content="Similar Artists"
                       Margin="0"/>
            </WrapPanel>

            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <local:SimilarArtistView Grid.Row="0"
                                         Grid.Column="0"
                                         DataContext="{Binding SimilarArtists[0]}" />
                <local:SimilarArtistView Grid.Row="0"
                                         Grid.Column="1"
                                         DataContext="{Binding SimilarArtists[1]}" />
                <local:SimilarArtistView Grid.Row="1"
                                         Grid.Column="0"
                                         DataContext="{Binding SimilarArtists[2]}" />
                <local:SimilarArtistView Grid.Row="1"
                                         Grid.Column="1"
                                         DataContext="{Binding SimilarArtists[3]}" />
            </Grid>

        </Grid>

    </Grid>
</UserControl>
