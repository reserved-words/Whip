<Window x:Class="Whip.View.Windows.MiniPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whip.View.Windows"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        ShowInTaskbar="True" 
        SizeToContent="WidthAndHeight"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="Manual"
        Icon="pack://application:,,,/logo.ico"
        Left="0"
        Top="0"
        Closing="OnClosing"
        Loaded="Window_Loaded"
        Title="Whip" Height="300" Width="250">
    <StackPanel>
        <ContentControl Content="{Binding CurrentTrackMiniViewModel}" />
        <Border Style="{StaticResource ColourBorder}">
            <ContentControl Content="{Binding PlayerControlsViewModel}" />
        </Border>
    </StackPanel>
</Window>
